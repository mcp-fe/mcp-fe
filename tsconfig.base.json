{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@mcp-fe/mcp-worker": ["libs/mcp-worker/src/index.ts"],
      "@mcp-fe/event-tracker": ["libs/event-tracker/src/index.ts"],
      "@mcp-fe/react-event-tracker": ["libs/react-event-tracker/src/index.ts"]
    }
  }
}
